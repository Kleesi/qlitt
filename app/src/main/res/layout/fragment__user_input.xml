<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.UserInputFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/text_view__user_input_fragment__prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/widget.textview.user_input_fragment__prompt"

        android:textSize="@dimen/text_size__user_input_fragment__prompt"
        android:textStyle="italic"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_view__user_input_fragment__prompt"
        android:background="#80ffffff"
        />



</RelativeLayout>
